<div class="row hidden-xs">
  <% @events.each do |event| %>
    <div class="event-card">
      <div class="event-card-content">
        <div id="priming-events"><i class="far fa-window-minimize"></i></div>
        <div class="event-other-card-item" id="event-name"><%= event.name.mb_chars.upcase.to_s %></div>
        <div class="event-other-card-item" id="event-date"><%= event.date.mb_chars.upcase.to_s%></div>
        <div class="event-other-card-item" id="event-localisation"><%= event.localisation.mb_chars.upcase.to_s%></div>
        <div class="event-other-card-item" id="event-information"><%= event.information.mb_chars.upcase.to_s%></div>
        <% if current_user %>
          <div><%= link_to "delete ", event_path(event), method: :delete, class:"link"%>    |   <%= link_to "  update", edit_event_path(event), class:"link"%></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="row hidden-sm hidden-md hidden-lg">
  <% @events.each do |event| %>
    <div class="event-card-xs">
      <div class="event-card-content-xs">
        <div class="event-other-card-item-xs" id="event-other-card-item-xs-left"> <p id="event-name-xs"> <%= event.name.mb_chars.upcase.to_s %></p></div>
        <div class="event-other-card-item-xs" id="event-other-card-item-xs-right"> <p id="event-date-xs">  <%= event.date.mb_chars.upcase.to_s%></p></div>
        <div class="event-other-card-item-xs" id="event-other-card-item-xs-left-small"> <p id="event-localisation-xs"> <%= event.localisation.mb_chars.upcase.to_s%></p></div>
        <div class="event-other-card-item-xs" id="event-other-card-item-xs-right-small"> <p id="event-information-xs"> <%= event.information.mb_chars.upcase.to_s%></p></div>
        <div class="event-card-item-xs-priming"> <p id="event-priming-xs-other"> - </p></div>
      </div>
    </div>
  <% end %>
</div>


