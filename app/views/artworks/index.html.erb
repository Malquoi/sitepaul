<div class= "body-shop">

<div class="skeleton text-center" id="skeleton-shop">

  <div class="skeleton-left text-center">
    <div class="link-border-container">
    <div id="link-rotate-left"> <%=link_to "HOME", projects_path, class: "link-border"%> </div>
    </div>
  </div>


  <div class="skeleton-middle text-center">
    <div class="shop-title"><p>SHOP</p></div>
    <div class="artworks-shop">

    <div class="shop-container">
      <div class="row">
          <% @artworks.each do |artwork| %>
          <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">



            <div class= "shop-artwork-card">
              <%  %>
            <div class= "shop-artwork-photo" >
              <a class="artwork-photo-link" href="<%= artwork_path(artwork) %>"><p><%= cl_image_tag artwork.photo,height: 150, crop: :scale %></p></a>
             </div>
            <div class="artwork-photo-description text-center">
                <a class="artwork-photo-link" href="<%= artwork_path(artwork) %>"><%= artwork.title %> (<%= artwork.date%>)</a>
            </div>
            </div>
            </div>
          <% end %>
      </div>
  </div>
  </div>
</div>


  <div class="skeleton-right text-center">
    <div class="link-border-container">
    <div id="link-rotate-right"><%#=link_to "NEWS", events_path, class: "link-border"%></div>
  </div>
</div>

</div>

</div>

